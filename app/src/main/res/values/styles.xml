<?xml version="1.0" encoding="utf-8"?>


<resources>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="CustomTabLayoutStyle" parent="Widget.Design.TabLayout">
        <item name="tabTextAppearance">@style/CustomTabTextStyle</item>
    </style>

    <style name="CustomTabTextStyle" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">15sp</item> // set the desired font size here
    </style>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@color/custom_background_color</item>
    </style>
</resources>