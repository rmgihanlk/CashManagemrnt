<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivityCashProcessing">


    <Button
        android:id="@+id/btnmenuAdd"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_marginStart="71dp"
        android:layout_marginTop="121dp"
        android:layout_marginEnd="71dp"
        android:layout_marginBottom="37dp"
        android:text="ADD QUICK TRANSACTION"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@+id/btnList"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnList"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_marginStart="71dp"
        android:layout_marginEnd="71dp"
        android:layout_marginBottom="40dp"
        android:text="ON GOING TRANSACTIONS"
        app:layout_constraintBottom_toTopOf="@+id/btnmenuUpdate"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnmenuAdd" />

    <Button
        android:id="@+id/btnmenuSummary"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_marginStart="71dp"
        android:layout_marginEnd="71dp"
        android:layout_marginBottom="204dp"
        android:text="SUMMARY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnmenuUpdate" />

    <Button
        android:id="@+id/btnmenuUpdate"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_marginStart="71dp"
        android:layout_marginEnd="71dp"
        android:layout_marginBottom="47dp"
        android:text="UPDATE TRANSACTIONS"
        app:layout_constraintBottom_toTopOf="@+id/btnmenuSummary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnList" />

</androidx.constraintlayout.widget.ConstraintLayout>